---
import { type MetaHeadProps } from '@/types/layouts.types'
import MetaHead from '@components/common/MetaHead.astro'
import BgGlitch from '@components/main/BgGlitch.astro'
import Footer from '@components/main/Footer.astro'
import Navbar from '@components/main/Navbar.astro'

interface Props extends MetaHeadProps {
  classList?: string | string[]
}

const { title, description, ogImage, classList } = Astro.props

const classes = Array.isArray(classList) ? classList : [classList]
---

<!doctype html>
<html lang="es" class="h-full">
  <!-- <Meta -->
  <MetaHead title={title} description={description} ogImage={ogImage} />

  <body class:list={['h-full', ...classes]}>
    <header>
      <BgGlitch />
      <Navbar />
    </header>
    <!-- Content -->
    <slot />
    <Footer />
  </body>
</html>
